<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.nillawaffer.hue.calendar"
    xmlns:tools="http://schemas.android.com/tools">


    <uses-permission android:name="android.permission.INTERNET" />

    <uses-sdk tools:overrideLibrary="com.flask.colorpicker, com.alamkanak.weekview"/>

    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".BasicActivity"
            android:label="@string/app_name"
            android:icon="@drawable/hueicon">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LightBulbs"
            android:label="@string/light_bulbs">
        </activity>

        <activity
            android:name=".EventDetailActivity"
            android:label="@string/event_detail">
        </activity>

        <activity
            android:name=".EventAddition"
            android:label="@string/event_addition">
        </activity>
        <activity
            android:name=".EventEdit"
            android:label="@string/event_addition">
        </activity>
        <activity
            android:name=".PHHomeActivity"
            android:label="@string/home_activity">
        </activity>

        <activity
            android:name=".LightBulbControlActivity"
            android:label="@string/hue_functions">
        </activity>

        <activity
            android:name=".PHPushLinkActivity"
            android:label="@string/hue_functions">
        </activity>

        <activity
            android:name=".PHBulbActivity"
            android:label="@string/light_bulbs">
        </activity>

        <activity
            android:name=".TagAdditionActivity"
            android:label="@string/tag_activity">
        </activity>


    </application>

</manifest>
